<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eightjo.modong.activity_GroupStep2"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="함께할 사용자의 id를\n 입력해 주세요."
            android:id="@+id/textView8"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="#4487c6" />

        <Space
            android:layout_width="20px"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="groupName의"
            android:id="@+id/textView_groupNameView"
            android:textSize="35dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText_member1"
            android:background="#4487c6"
            android:text="요원1"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="20px"
            android:layout_height="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText_member2"
            android:background="#4487c6"
            android:text="요원2"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="20px"
            android:layout_height="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText_member3"
            android:background="#4487c6"
            android:text="요원3"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="20px"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="+ 나의 ID"
            android:id="@+id/textView_myId"
            android:textSize="20dp"
            android:background="#ffffff"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 만들기"
        android:id="@+id/textView7"
        android:textSize="45dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="그룹 생성하기!"
        android:id="@+id/button16"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick_goNext" />

</RelativeLayout>
